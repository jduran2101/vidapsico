        animation-timeline: view();
        animation-range: entry 0% cover 40%;
    }
    @keyframes appear {
    from {
      opacity: 0;
      /*scale: 0.5;*/
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      /*scale: 1;*/
      transform: translateX(0px);
    }
    
  }





    .img img {
        width: 100%;
        height: 100%;
        border-radius: 90px 1px 90px 1px;
        box-shadow: rgba(30, 241, 157, 0.3) 0px 20px 38px, rgba(30, 241, 157, 0.3) 0px 20px 48px;
        
    }
