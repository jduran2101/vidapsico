        section {
            margin: 15px 0 50px 0;
        }
        .cuerpodos {
            width: 95%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .cuerpodos .img {
            
            width: 98%;
            height: 400px;
        } 
        .cuerpodos .info {
            width: 98%;
            order: -1;
            padding-top: 25px;
        }
        section .rocio {
            position: absolute;
            top: 500px;
        }
        .info {
            display: flex;
            align-items: center;
