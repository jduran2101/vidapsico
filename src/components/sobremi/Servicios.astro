---
import {servicios} from "../../data/rocio.json"
---

{
    servicios.map(uno => 
        <article class="area">
             <img src={uno.imagen} alt="">
                 <div class="descripcion">
                    <h2>{uno.titulo}</h2>
                    <p> {uno.descripcion}</p>
                </div>   
        </article>
    )
}

<style>
  .area {
    padding: 2rem 1rem;
    width: 320px;
    height: 400px;
    position: relative;
    display: flex;
    justify-content: flex-end;
    box-shadow: 0px 7px 10px rgba(0, 0, 0, 0.5);
    transition: 0.5s ease-in-out;
    animation: appear linear;
    animation-timeline: view();
    animation-range: entry 0% cover 40%;
  }
  @keyframes appear {
    from {
      opacity: 0;
      /*scale: 0.5;*/
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      /*scale: 1;*/
      transform: translateX(0px);
    }
    
  }



  .area img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
  .area .descripcion {
    position: relative;
    z-index: 3;
    color:#fff;
    opacity: 0;
    transform: translateY(30px);
    transition: 0.5 all;
  }
  .area:hover .descripcion {
    opacity: 1;
    transform: translateY(0px);
  }
  .area .descripcion p  {
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    line-height: 30px;
    margin-top: 8px;
    margin-bottom: 20px;
    color: #fff;
  }
    
  .area .descripcion h2 {
    margin: 0;
    text-decoration: underline;
    text-decoration-color: #fff;
    text-decoration-thickness:4px ;
    text-align: center;
    padding-bottom: 10px;
  }
  .area:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 176, 155, 0.5), rgba(150, 201, 61, 1));
    z-index: 2;
    transition: 0.5s all;
    opacity: 0;
  }
  .area:hover:before {
    opacity: 1;
  }
</style>