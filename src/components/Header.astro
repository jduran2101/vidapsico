<header>
    <div class="first">
        <div>
            <img src="/img/VidaPsicoLogoColor.png" alt="" />
        </div>
        <button class="abrir-menu" id="abrir" aria-label="name">
            <svg
                width="40"
                height="40"
                viewBox="0 0 24 24"
                style="background: #fff"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                    d="M4 6C4 5.44772 4.44772 5 5 5H19C19.5523 5 20 5.44772 20 6C20 6.55228 19.5523 7 19 7H5C4.44772 7 4 6.55228 4 6Z"
                    fill="currentColor"></path>
                <path
                    d="M4 18C4 17.4477 4.44772 17 5 17H19C19.5523 17 20 17.4477 20 18C20 18.5523 19.5523 19 19 19H5C4.44772 19 4 18.5523 4 18Z"
                    fill="currentColor"></path><path
                    d="M5 11C4.44772 11 4 11.4477 4 12C4 12.5523 4.44772 13 5 13H13C13.5523 13 14 12.5523 14 12C14 11.4477 13.5523 11 13 11H5Z"
                    fill="currentColor"></path></svg
            >
        </button>
        <nav class="nav" id="nav">
           
            <a href="/">Home</a>
            <a href="/sobremi">Sobre mi</a>
            <a href="/areas">Areas de Terapias</a>
        </nav>
    </div>
    <script>
        document.addEventListener("astro:page-load", () => {
            const nav = document.querySelector("#nav");
            const abrir = document.querySelector("#abrir");

            abrir.addEventListener("click", () => {
                nav.classList.toggle("visible");
            });
        });
    </script>
</header>

<style>
    header {
       /* background-color: #fff; */
        width: 100%;
        height: 90px;
        background-color: #7fc7af;
        margin: 1px auto;
        
        display: flex;
        align-items: center;
        justify-content: center;
       /* border: 3px solid #7fc7af;
        border-radius: 20px; 
        position: fixed;
        top: 0; 
        max-width: inherit; 
        animation: e-header linear both;
        animation-timeline: scroll(root);
        animation-range: 0 200px; */
    }
    @keyframes e-header {
        to {
            background-color: transparent;
            backdrop-filter: blur(10px);
        }
    }

    .first {
        width: 88%;
        background-color: #f1f1f1;
        border: 3px solid #7fc7af;
        border-radius: 20px; 
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        position: fixed;
        z-index: 100;
        animation: e-header linear both;
        animation-timeline: scroll(root);
        animation-range: 0 200px; 
        
    }
    div img {
        width: 160px;
    }

    nav a {
        text-decoration: none;
        font-size: 18px;
        font-weight: 400;
        padding: 15px;
        color: rgb(60, 59, 59);
        transition: 0.2s all ease-in;
    }
    nav a:hover {
        border-radius: 20px 40px;
        background-color: #7fc7af;
        color: #ffff;
        font-weight: 500;
    }
    .abrir-menu,
    .cerrar-menu {
        display: none;
    }
    @media (max-width: 800px) {
        header {
            height: 80px;
            
        }
        .first {
            background-color: #fff;
            height: 55px;
            width: 100%;
            max-width: none;
            border-radius: 0;
            border: none;
            
        }
        .abrir-menu,
        .cerrar-menu {
            display: block;
            margin: 10px;
            border: 0;
            cursor: pointer;
            border-radius: 10px;
            background: #fff;
            color: #7fc7af;
        }
        nav {
            padding-top: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            z-index: 100;
            position: absolute;
            top: 78px;
            width: 100%;
            height: 100vh;
            right: 0;
            bottom: 0;
            background-color: #fff;
            opacity: 0;
            visibility: hidden;
            transition: 0.5s ease;
        }
        .nav.visible {
            opacity: 1;
            visibility: visible;
            transition: 0.5s ease;
        }
    }
</style>
