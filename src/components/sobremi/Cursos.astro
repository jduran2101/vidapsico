---
import { cursos } from "../../data/rocio.json";
---

<section>
    <p>Trayectoria Acad√©mica y Profesional</p>
    <h3>Mi Desarrollo Profesional</h3>
    <div class="desarrollo">
        {
            cursos.map((cursos) => (
                <article>
                    <div class="info">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="30"
                            height="30"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="icon icon-tabler icons-tabler-filled icon-tabler-award"
                        >
                            <>
                                <path
                                    stroke="none"
                                    d="M0 0h24v24H0z"
                                    fill="none"
                                />
                                <path d="M19.496 13.983l1.966 3.406a1.001 1.001 0 0 1 -.705 1.488l-.113 .011l-.112 -.001l-2.933 -.19l-1.303 2.636a1.001 1.001 0 0 1 -1.608 .26l-.082 -.094l-.072 -.11l-1.968 -3.407a8.994 8.994 0 0 0 6.93 -3.999z" />
                                <path d="M11.43 17.982l-1.966 3.408a1.001 1.001 0 0 1 -1.622 .157l-.076 -.1l-.064 -.114l-1.304 -2.635l-2.931 .19a1.001 1.001 0 0 1 -1.022 -1.29l.04 -.107l.05 -.1l1.968 -3.409a8.994 8.994 0 0 0 6.927 4.001z" />
                            </>
                            <path d="M12 2l.24 .004a7 7 0 0 1 6.76 6.996l-.003 .193l-.007 .192l-.018 .245l-.026 .242l-.024 .178a6.985 6.985 0 0 1 -.317 1.268l-.116 .308l-.153 .348a7.001 7.001 0 0 1 -12.688 -.028l-.13 -.297l-.052 -.133l-.08 -.217l-.095 -.294a6.96 6.96 0 0 1 -.093 -.344l-.06 -.271l-.049 -.271l-.02 -.139l-.039 -.323l-.024 -.365l-.006 -.292a7 7 0 0 1 6.76 -6.996l.24 -.004z" />
                        </svg>
                        <div />
                    </div>
                    <div class="infodos">
                        <h4>{cursos.instituto}</h4>
                        <p class="curso">{cursos.curso}</p>
                        <p>{cursos.tipo}</p>
                    </div>
                </article>
            ))
        }
    </div>
</section>
<style>
    section {
        margin: 30px 0;

        p {
            font-size: 26px;
            color: #7fc7af;
            text-align: center;
        }
        h3 {
            font-size: 30px;
            color: #3c3b3b;
            text-align: center;
        }
    }
    .desarrollo {
        width: 80%;
        margin: 50px auto;
        display: flex;
        flex-wrap: wrap;
    }


    article {
        width: 500px;
        height: 120px;
        /*background-color: #7fc7af;*/
        display: flex;

        align-items: center;
        /* border-radius: 5px;
        border: solid 0.9px rgb(85, 84, 84);
        box-shadow: 9px 9px 0 -0.9px #ceeef8, 9px 9px 0 0 rgb(85, 84, 84);
        transition: box-shadow 0.2s ease-in;
        cursor: pointer;*/
        animation: outblur linear both;
        animation-timeline: view();
    }
    @keyframes outblur {
        0% {
            filter: blur(40px);
        }
        45%,
        55% {
            filter: blur(0);
        }
        100% {
            filter: blur(40px);
        }
    }

    article .info {
        padding: 10px;
        /* border-right:2px solid #fff; */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        svg {
            color: #7fc7af;
        }
        div {
            height: 90px;
            width: 4px;
            background-color: #7fc7af;
        }
    }

    article .infodos {
        width: 70%;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
        border: 3px solid #7fc7af;
        background-color: #fff;
        border-radius: 15px;
        height: 90px;

        p {
            color: #3c3b3b;
            font-size: 14px;
            text-align: center;
            font-style: italic;
        }
        h4 {
            font-size: 16px;
            color: #7fc7af;
        }
        .curso {
            font-size: 15px;
            color: #3c3b3b;
            font-weight: bold;
            font-style: normal;
        }
    }
    @media (max-width: 900px) {
        .desarrollo {
            width: 98%;
        }
        article {
            width: 800px;
        }
        article .infodos {
            width: 80%;
        }
    }
</style>
