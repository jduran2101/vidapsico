        width: 45%;
        display: flex;
        flex-direction: column;
        align-items: start;
        
        h4 {
            font-size: 24px;
            color: #7fc7af;
        }
        h2 {
            font-size: 48px;
            font-weight: 200;
            padding: 15px 0;
            
        }
        p {
            font-size: 20px;
            font-weight: 200;
            padding: 10px;
        }
    }
